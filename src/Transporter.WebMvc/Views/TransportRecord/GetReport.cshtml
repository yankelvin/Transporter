@model Transporter.Transport.Application.ViewModels.ReportViewModel

<div>
    <div class="row card">
        <div class="col-md-6">
            Quantidade por Carros: @Model.QuantityCars
        </div>

        <div class="col-md-6">
            Valor total arrecadado por carros: @Model.TotalValueCars
        </div>
    </div>

    <div class="row card mt-3">
        <div class="col-md-6">
            Quantidade por Onibus: @Model.QuantityBus
        </div>

        <div class="col-md-6">
            Valor total arrecadado por onibus: @Model.TotalValueBus
        </div>
    </div>

    <div class="row card mt-3">
        <div class="col-md-6">
            Quantidade por Vans: @Model.QuantityVans
        </div>

        <div class="col-md-6">
            Valor total arrecadado por Vans: @Model.TotalValueVans
        </div>
    </div>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>#</th>
                <th>Cpf do Passageiro</th>
                <th>Placa do Veículo</th>
                <th>Data do Transporte</th>
                <th>Kilometragem da Viagem</th>
                <th>Preço Total</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var transport in Model.Transports)
            {
                <tr>
                    <td>@transport.CpfPassenger</td>
                    <td>@transport.LicensePlate</td>
                    <td>@transport.TransportDate</td>
                    <td>@transport.Kilometers</td>
                    <td>@transport.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>
